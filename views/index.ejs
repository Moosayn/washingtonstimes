<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Washington Times - Breaking News, US News, World News</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>
  <%- include('partials/header') %>
  
  <!-- Trending Bar -->
  <div class="trending-bar">
    <div class="container">
      <span class="trending-label">TRENDING:</span>
      <a href="#">DONALD TRUMP</a>
      <a href="#">CHINA</a>
      <a href="#">JEFFREY EPSTEIN</a>
      <a href="#">ISRAEL</a>
      <a href="#">LOS ANGELES</a>
      <a href="#">RUSSIA</a>
      <a href="#">WASHINGTON</a>
      <a href="#">WHITE HOUSE</a>
      <a href="#">CHICAGO</a>
      <a href="#">GAZA</a>
    </div>
  </div>
  
  <main class="container">
    <!-- Top Featured Articles Row -->
    <section class="top-featured">
      <% const topArticles = articles.slice(0, 3); %>
      <% topArticles.forEach((article, index) => { %>
      <article class="top-article">
        <% if (article.image) { %>
        <img src="<%= article.image %>" alt="<%= article.title %>">
        <% } else { %>
        <div class="placeholder-img" style="background:#e5e5e5;height:180px;display:flex;align-items:center;justify-content:center;color:#999;margin-bottom:10px;">üì∞ News</div>
        <% } %>
        <h3><a href="/article/<%= article.slug %>"><%= article.title %></a></h3>
      </article>
      <% }); %>
    </section>

    <!-- Main 3-Column Layout -->
    <div class="three-column-layout">
      <!-- LEFT SIDEBAR -->
      <aside class="left-sidebar">
        <% const leftArticles = articles.slice(3, 8); %>
        <% leftArticles.forEach(article => { %>
        <article class="sidebar-item">
          <% if (article.image) { %>
          <img src="<%= article.image %>" alt="<%= article.title %>">
          <% } else { %>
          <div class="placeholder-sm" style="width:80px;height:60px;background:#e5e5e5;flex-shrink:0;display:flex;align-items:center;justify-content:center;color:#999;font-size:24px;">üìÑ</div>
          <% } %>
          <h4><a href="/article/<%= article.slug %>"><%= article.title %></a></h4>
        </article>
        <% }); %>
      </aside>

      <!-- CENTER MAIN CONTENT -->
      <section class="main-content">
        <% const mainArticle = articles[8] || articles[0]; %>
        <article class="featured-main">
          <h2><a href="/article/<%= mainArticle.slug %>"><%= mainArticle.title %></a></h2>
          <% if (mainArticle.image) { %>
          <img src="<%= mainArticle.image %>" alt="<%= mainArticle.title %>">
          <% } else { %>
          <div class="placeholder-lg" style="width:100%;height:400px;background:#e5e5e5;margin:15px 0;display:flex;align-items:center;justify-content:center;color:#999;font-size:48px;">üì∞</div>
          <% } %>
          <p class="excerpt"><%= mainArticle.content.substring(0, 200) %>...</p>
          <p class="byline">By <strong><%= mainArticle.author %></strong> - The Washington Times - <%= new Date(mainArticle.date).toLocaleDateString() %></p>
        </article>

        <hr style="margin: 30px 0; border-top: 2px solid #ddd;">

        <!-- More Articles -->
        <% const moreArticles = articles.slice(9, 15); %>
        <% moreArticles.forEach(article => { %>
        <article class="content-article">
          <% if (article.image) { %>
          <img src="<%= article.image %>" alt="<%= article.title %>">
          <% } %>
          <h3><a href="/article/<%= article.slug %>"><%= article.title %></a></h3>
          <p class="excerpt"><%= article.content.substring(0, 150) %>...</p>
          <p class="meta">By <%= article.author %> - The Washington Times</p>
        </article>
        <% }); %>

        <!-- MY TIMES Section -->
        <section class="my-times">
          <h2>MY TIMES <a href="#" class="view-all">VIEW ALL ‚Üí</a></h2>
          <div class="my-times-grid">
            <% articles.slice(15, 19).forEach(article => { %>
            <article class="my-times-item">
              <% if (article.image) { %>
              <img src="<%= article.image %>" alt="<%= article.title %>">
              <% } else { %>
              <div class="placeholder-md" style="width:100%;height:130px;background:#e5e5e5;margin-bottom:8px;display:flex;align-items:center;justify-content:center;color:#999;font-size:32px;">üìÑ</div>
              <% } %>
              <h4><a href="/article/<%= article.slug %>"><%= article.title %></a></h4>
            </article>
            <% }); %>
          </div>
        </section>
      </section>

      <!-- RIGHT SIDEBAR -->
      <aside class="right-sidebar">
        <!-- Follow Us -->
        <div class="follow-box">
          <h3>Follow Us</h3>
          <div class="social-icons">
            <a href="#" class="social">f</a>
            <a href="#" class="social">ùïè</a>
            <a href="#" class="social">in</a>
            <a href="#" class="social">üì∑</a>
            <a href="#" class="social">‚ñ∂</a>
          </div>
          <input type="search" placeholder="Search">
        </div>

        <!-- Commentary -->
        <div class="commentary-box">
          <h3>COMMENTARY</h3>
          <% articles.slice(0, 2).forEach(article => { %>
          <div class="commentary-item">
            <h4><a href="/article/<%= article.slug %>"><%= article.title.substring(0, 60) %>...</a></h4>
            <p><%= article.author %></p>
          </div>
          <% }); %>
        </div>

        <!-- Sponsored Content -->
        <div class="sponsored-box">
          <h3>SPONSORED CONTENT</h3>
          <div class="ad-placeholder">Advertisement</div>
        </div>
      </aside>
    </div>
  </main>
        <!-- Follow Us -->

  <%- include('partials/footer') %>
</body>
</html>
